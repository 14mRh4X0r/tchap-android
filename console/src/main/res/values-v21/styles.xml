<resources>

    <!-- no action bar window -->
    <style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.Light">

        <!-- hide the action bar -->
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>

        <!-- fonts -->
        <item name="android:typeface">sans</item>

        <!-- activities background -->
        <item name="android:windowBackground">@color/vector_activity_background_color</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">

        <!-- with action bar -->
        <item name="android:windowActionBar">true</item>

        <!-- status bar color -->
        <item name="android:colorPrimaryDark">@color/vector_statusbar_color</item>

        <!-- activities background -->
        <item name="android:windowBackground">@color/vector_activity_background_color</item>

        <!-- fonts -->
        <item name="android:typeface">sans</item>

        <!-- custom action bar -->
        <item name="android:actionBarStyle">@style/Vector.Styled.ActionBar</item>
        <item name="actionBarStyle">@style/Vector.Styled.ActionBar</item>

        <!-- actionbar icons color -->
        <item name="actionBarTheme">@style/Vector.ActionBarTheme</item>

        <!-- remove the shadow under the actionbar -->
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:popupMenuStyle">@style/vector.PopupMenu</item>
    </style>

    <!--  -->
    <style name="vector.PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@color/vector_0_87_black_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:popupElevation">4dp</item>
    </style>

    <!-- actionbar icons color -->
    <style name="Vector.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/vector_actionbar_icons_color</item>
    </style>

    <!-- custom action bar -->
    <style name="Vector.Styled.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/vector_actionbar_background</item>
        <item name="background">@color/vector_actionbar_background</item>

        <!-- remove shadow under the action bar -->
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>

        <!-- main text -->
        <item name="titleTextStyle">@style/ActionBarTitleText</item>

        <!-- subtext text -->
        <item name="subtitleTextStyle">@style/ActionBarSubTitleText</item>
    </style>

    <!-- main text -->
    <style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/vector_actionbar_text_color</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- subtext text -->
    <style name="ActionBarSubTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/vector_actionbar_text_color</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- home scroller menu -->
    <style name="NavigationViewStyle">
        <item name="android:textColor">@color/vector_4d_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- login & registration activities -->
    <style name="LoginAppTheme" parent="AppTheme.NoActionBar">
        <item name="android:editTextStyle">@style/LoginEditTextStyle</item>
        <item name="android:buttonStyle">@style/LoginButtonStyle</item>
    </style>

    <style name="LoginEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="LoginButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
