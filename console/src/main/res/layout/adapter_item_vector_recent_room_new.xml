<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/internal_container"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Vertical bar with colour changing to indicate unread messages -->
        <TextView
            android:id="@+id/bing_indicator_unread_message"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:background="@android:color/darker_gray"
            android:layout_alignParentLeft="true" />

        <!-- Avatar -->
        <RelativeLayout
            android:id="@+id/avatar_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bing_indicator_unread_message"
            android:layout_centerVertical="true">

            <include layout="@layout/round_avatar_vector"/>
        </RelativeLayout>

        <!-- Room name - note margins values in each side (right/left) -->
        <TextView
            android:id="@+id/roomSummaryAdapter_roomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avatar_parent"
            android:layout_toLeftOf="@id/roomSummaryAdapter_ts"
            android:layout_alignTop="@id/avatar_parent"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:textColor="@color/vector_text_black_color"
            android:text="Room Name" />

        <!-- Last message of the room -->
        <TextView
            android:id="@+id/roomSummaryAdapter_room_message"
            android:layout_alignLeft="@id/roomSummaryAdapter_roomName"
            android:layout_alignBottom="@id/avatar_parent"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginRight="13dp"
            android:textColor="@color/vector_text_gray_color"
            android:text="last room message" />

        <!-- Horizontal line separator between room rows -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/vector_silver_color"
            android:layout_alignLeft="@id/avatar_parent"
            android:layout_alignParentBottom="true"/>

        <!-- Message timestamp -->
        <TextView
            android:id="@+id/roomSummaryAdapter_ts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Jan 1 00:00"
            android:textColor="@color/vector_text_black_color"
            android:layout_alignBaseline="@id/roomSummaryAdapter_roomName"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"/>
    </RelativeLayout>

</RelativeLayout>