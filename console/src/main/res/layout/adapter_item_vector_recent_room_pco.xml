<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/layout_avatar"
        android:layout_width="@dimen/member_list_avatar_size"
        android:layout_height="@dimen/member_list_avatar_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="4dp">

        <include layout="@layout/round_avatar_vector"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:id="@+id/layout_avatar2"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        android:text="Room Name yyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyy"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/roomSummaryAdapter_roomName"
        android:layout_alignTop="@id/layout_avatar"
        android:layout_toRightOf="@id/layout_avatar"
        android:layout_toLeftOf="@+id/roomSummaryAdapter_ts"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:text="Small Text"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignBottom="@id/layout_avatar"
        android:layout_toRightOf="@id/layout_avatar"
        android:layout_marginBottom="5dp"
        android:id="@+id/roomSummaryAdapter_message"/>


    <ProgressBar
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/roomSummaryAdapter_delete_progress"
        android:indeterminate="true"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Jan 1 00:00"
        android:textColor="?android:attr/textColorSecondary"
        android:id="@+id/roomSummaryAdapter_ts"
        android:layout_alignBaseline="@id/roomSummaryAdapter_roomName"
        android:layout_toLeftOf="@id/roomSummaryAdapter_delete_progress"
        android:layout_marginTop="0dp"/>



</RelativeLayout>
