<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/keybackup_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/keybackupsetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragments.keybackupsetup.KeybackupSetupStep2Fragment">

        <TextView
            android:id="@+id/keybackupsetup_step2_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:text="@string/keybackup_setup_step2_text"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/keybackup_passphrase_enter_til"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/keybackup_passphrase_enter_til"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            app:errorEnabled="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/keybackup_view_password_clickable"
            app:layout_constraintTop_toBottomOf="@id/keybackupsetup_step2_text">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/keybackup_passphrase_enter_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/keybackup_setup_step2_passphrase_enter_hint"
                android:maxLines="3"
                android:textColor="?android:textColorPrimary" />

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:id="@+id/keybackup_view_password_clickable"
            android:layout_width="44dp"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@+id/keybackup_passphrase_enter_til"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/keybackup_passphrase_enter_til"
            app:layout_constraintTop_toTopOf="@+id/keybackup_passphrase_enter_til">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="18dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_eye_black"
                android:tint="?attr/colorAccent" />
        </RelativeLayout>

        <im.vector.ui.PasswordStrengthBar
            android:id="@+id/keybackup_passphrase_security_progress"
            android:layout_width="0dp"
            android:layout_height="4dp"
            app:layout_constraintLeft_toLeftOf="@+id/keybackup_passphrase_enter_til"
            app:layout_constraintRight_toRightOf="@+id/keybackup_passphrase_enter_til"
            app:layout_constraintTop_toBottomOf="@+id/keybackup_passphrase_enter_til" />

        <View
            android:id="@+id/keybackup_step2_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="6dp"
            android:background="?vctr_list_divider_color"
            app:layout_constraintTop_toBottomOf="@+id/keybackup_passphrase_security_progress" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/keybackup_passphrase_confirm_til"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            app:errorEnabled="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/keybackup_view_password_clickable"
            app:layout_constraintTop_toBottomOf="@id/keybackup_step2_separator">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/keybackup_passphrase_confirm_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/keybackup_setup_step2_passphrase_confirm_hint"
                android:maxLines="3"
                android:textColor="?android:textColorPrimary" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/keybackupsetup_step2_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="?attr/colorAccent"
            android:padding="16dp"
            android:text="@string/keybackup_setup_step2_button_title"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/keybackup_passphrase_confirm_til" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>